# Copy this to .env and fill in values

# REQUIRED: generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=replace-me-with-a-random-hex-string

# Server bind settings
HOST=0.0.0.0
PORT=5000

# Database path (default: next to server.py)
DB_PATH=secure_messages.db

# Set to true only during development
DEBUG=false

# Client: server URL (change to your server's address or ngrok URL)
SERVER_URL=http://localhost:5000
